<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with modern gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:endColor="#D84315"
                android:centerColor="#F2632A"
                android:startColor="#FF7043"
                android:type="linear" />
        </shape>
    </item>

    <!-- Abstract pattern -->
    <item>
        <rotate android:fromDegrees="45">
            <shape android:shape="line">
                <stroke android:width="4dp"
                    android:color="#33FFFFFF" />
                <size android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <!-- Circular background for icon -->
    <item
        android:width="140dp"
        android:height="140dp"
        android:gravity="center">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="70dp"
                android:startColor="#F2632A"
                android:endColor="#D84315" />
        </shape>
    </item>

    <!-- Inner circle glow -->
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>

    <!-- Vehicle icon with modern truck design -->
    <item
        android:width="80dp"
        android:height="80dp"
        android:gravity="center">
        <vector
            android:width="80dp"
            android:height="80dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M18,18.5m-1.5,0a1.5,1.5 0,1 1,3 0a1.5,1.5 0,1 1,-3 0" />
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M6,18.5m-1.5,0a1.5,1.5 0,1 1,3 0a1.5,1.5 0,1 1,-3 0" />
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M20,8h-3V4H3C1.9,4 1,4.9 1,6v11h2c0,1.66 1.34,3 3,3s3,-1.34 3,-3h6c0,1.66 1.34,3 3,3s3,-1.34 3,-3h2v-5L20,8zM19.5,9.5l1.96,2.5H17V9.5H19.5z" />
        </vector>
    </item>
</layer-list> 
